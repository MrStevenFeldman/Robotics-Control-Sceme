<HardWareINfo>

	<ControlDevices>
		<!-- First Device is Host Device -->
		<ControlDevice>
			
			
			<ID>1</ID>
			<ConnectionType>HostDevice</ConnectionType>
			<name>BeagleBoardBlack</name>
			<!-- For BeagleBoard the 
				PIN numbers are negative for P8 (left side) 
							and Positive for P9 (right side) 
				Pins are numbered by there row postion*2 + column postion+1. 
						ie left to right, top to bottom
				
							-->
							
			<devicetype>BeagleBoardBlack</devicetype>
			<magicCapeId>9</magicCapeId>
			<pwm_period>500000</pwm_period>
		</ControlDevice>
