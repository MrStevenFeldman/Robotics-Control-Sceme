<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity" >

   
 	<!-- <fragment android:name="com.dalekcontroller.device.motor.BIDirectionalMotorPair"
              android:id="@+id/biMotorFragment" 
              android:layout_width="match_parent"
              android:layout_height="match_parent" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/unidirectionalContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="176dp"
            android:layout_weight="1.28" >
        </FrameLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.28" />

        <FrameLayout
            android:id="@+id/bidirectionalContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </FrameLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.28" />

        <FrameLayout
            android:id="@+id/bidirectionalpairContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp" >
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/servoContainer"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_weight="1.82" >

        </FrameLayout>
        
    </LinearLayout>

</RelativeLayout>